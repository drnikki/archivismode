<%= form_for([@image, @box]) do |f| %>
  <% if @box.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@box.errors.count, "error") %> prohibited this box from being saved:</h2>

      <ul>
      <% @box.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <!-- @todo. test on mobile. -->
    <%= label_tag(:x_start, "X Start") %>
    <%= f.text_field :x_start %>
  </div>
  <div class="field">
   <%= label_tag(:x_end, "X End") %>
    <%= f.text_field :x_end %>
  </div>
  <div class="field">
       <%= label_tag(:y_start, "Y Start") %>
    <%= f.text_field :y_start %>
  </div>
  <div class="field">
    <%= label_tag(:y_end, "Y End") %>
    <%= f.text_field :y_end %>
  </div>
  <div class="field">
   <%= label_tag(:note, "Notes") %>
    <%= f.text_field :note %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
