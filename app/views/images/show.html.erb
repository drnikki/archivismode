        <div id ="note-form">
            <form id="new_box" action="boxes/new" data-remote-"true" method="post">
                <input type="hidden" id="box_x_start" name="box[x_start]">
                <input type="hidden" id="box_y_start" name="box[y_start]">
                <input type="hidden" id="box_x_end" name="box[x_end]">
                <input type="hidden" id="box_y_end" name="box[y_end]">

                <input type="hidden" id="image-id" value="<%=@image.id %>">
                <textarea id ="note"> </textarea>
                <button type="button">&#10004;</button><!-- &#10003; for heavier -->


            </form>
        </div>


