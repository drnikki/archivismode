<p>
	<%= link_to 'Edit Image', edit_image_path(@image) %> |
	<%= link_to 'Back', images_path %>
</p>

<div>
    <p>Here are the boxes for this image</p>
    <table>
        <% @boxes.each do |box| %>
          <tr>
            <td>Box ID: <%= box.id %></td>
            <td><%= link_to 'Show', image_box_path(@image, box) %></td>
            <td><%= link_to 'Edit', edit_image_box_path(@image, box) %></td>
            <td><%= link_to 'Destroy', [@image, box], method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
    </table>
</div>